<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        >
    <ImageView
        android:id="@+id/iv_leaguesyelllist_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:background="@mipmap/demo"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_toRightOf="@id/iv_leaguesyelllist_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/iv_leaguesyelllist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="16sp"
            android:maxLength="10"
            android:textColor="@color/colores_news_10"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/iv_leaguesyelllist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-05-16"
            android:layout_marginTop="2dp"
            android:textColor="@color/colores_news_11"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            />
    </LinearLayout>
   <TextView
       android:id="@+id/iv_leaguesyelllist_response"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="响应"
       android:textColor="@color/color_008dda"
       android:textSize="16sp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:paddingTop="5dp"
       android:paddingBottom="5dp"
       android:layout_centerVertical="true"
       android:background="@drawable/shap_hollow_blue"
       android:layout_marginRight="12dp"
       android:layout_alignParentRight="true"
       />
    </RelativeLayout>
    <TextView
        android:id="@+id/iv_leaguesyelllist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="万达万达万达什么什么"
        android:textSize="16sp"
        android:maxLength="15"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="55dp"
        android:textColor="@color/colores_news_10"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/iv_leaguesyelllist_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="什么什么活动什么什么活动什么什么活动什么什么活动什么什么活动什么什么活动什么什么活动什么什么活动什么什么活动什么什么活动"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="35dp"
        android:layout_alignParentRight="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/iv_leaguesyelllist_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全文"
            android:textColor="@color/color_008dda"
            android:layout_marginLeft="50dp"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
        />
        <TextView
            android:id="@+id/iv_leaguesyelllist_phone"
            android:layout_below="@id/iv_leaguesyelllist_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="183696387962"
            android:textColor="@color/colores_news_11"
            android:layout_marginLeft="50dp"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/iv_leaguesyelllist_address"
            android:layout_below="@id/iv_leaguesyelllist_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="松江欢乐谷"
            android:layout_marginTop="6dp"
            android:textColor="@color/colores_news_11"
            android:layout_marginLeft="50dp"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>