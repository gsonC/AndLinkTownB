<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colores_news_14"
    tools:context="com.lianbi.mezone.b.ui.CouponUsingDetailsActivity">

    <LinearLayout
        android:id="@+id/top_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.5dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/all_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colores_news_01">

            <TextView
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/colores_news_01"
                android:textSize="@dimen/h17" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/been_used_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/been_used"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="已使用"
                android:textColor="@color/colores_news_10"
                android:textSize="@dimen/h17" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/unused_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/unused"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="未使用"
                android:textColor="@color/colores_news_10"
                android:textSize="@dimen/h17" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/invalid_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/invalid"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="已失效"
                android:textColor="@color/colores_news_10"
                android:textSize="@dimen/h17" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_"
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:layout_below="@id/top_"
        android:layout_marginTop="10.5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center_horizontal"
            android:text="会员电话"
            android:textColor="#4b4b4b"
            android:textSize="15.5sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:text="消费金额"
            android:textColor="#4b4b4b"
            android:textSize="15.5sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="使用时间"
            android:textColor="#4b4b4b"
            android:textSize="15.5sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:text="卡券状态"
            android:textColor="#4b4b4b"
            android:textSize="15.5sp" />
    </LinearLayout>

    <View
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/second_"
        android:background="@color/color_e3e3e3" />

    <LinearLayout
        android:id="@+id/bottom_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部发送："
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />

            <TextView
                android:id="@+id/all_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已使用："
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />

            <TextView
                android:id="@+id/used_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未使用："
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />

            <TextView
                android:id="@+id/unused_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已失效："
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />

            <TextView
                android:id="@+id/invalid_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/h10" />
        </LinearLayout>
    </LinearLayout>

    <cn.com.hgh.view.AbPullToRefreshView
        android:id="@+id/pull_to_refresh_coupon_using_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_"
        android:layout_below="@id/divide"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_empty_act_coupon_using_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/iv_empty" />

        <ListView
            android:id="@+id/coupon_using_detail_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_e3e3e3"
            android:dividerHeight="1dp"
            android:scrollbars="none" />
    </cn.com.hgh.view.AbPullToRefreshView>
</RelativeLayout>