<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_8000"
    android:gravity="top"
    android:orientation="vertical" >

    <Button
        android:id="@+id/pop_tma_today"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colores_news_14"
        android:gravity="center"
        android:text="今天"
        android:textColor="@color/colores_news_01"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colores_news_11" />

    <Button
        android:id="@+id/pop_tma_three"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colores_news_14"
        android:gravity="center"
        android:text="三天内"
        android:textColor="@color/color_c6c6c6"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colores_news_11" />

    <Button
        android:id="@+id/pop_tma_seven"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colores_news_14"
        android:gravity="center"
        android:text="一周内"
        android:textColor="@color/colores_news_11"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colores_news_11" />

    <Button
        android:id="@+id/pop_tma_month"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colores_news_14"
        android:gravity="center"
        android:text="一个月内"
        android:textColor="@color/colores_news_11"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colores_news_11" />

    <Button
        android:id="@+id/pop_tma_owner_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colores_news_14"
        android:gravity="center"
        android:text="自定义时间"
        android:textColor="@color/colores_news_11"
        android:textSize="16sp" />

</LinearLayout>