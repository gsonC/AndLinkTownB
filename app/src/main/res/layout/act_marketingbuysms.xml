<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colores_news_14"
     >
    <RelativeLayout
        android:id="@+id/ray_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="累计发送短信:"
            android:textSize="@dimen/regularfont"
            android:textColor="@color/color_4b4b4b"
            />
        <TextView
            android:id="@+id/txt_alreadysendnum"
            android:layout_toRightOf="@+id/txt_msg"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_4b4b4b"
            android:text="111"
            android:textSize="@dimen/regularfont"
            />
        <TextView
            android:id="@+id/txt_remainsendmsg"
            android:layout_toRightOf="@+id/txt_alreadysendnum"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_4b4b4b"
            android:text="剩余可发送短信:"
            android:textSize="@dimen/regularfont"
            />
        <TextView
            android:id="@+id/txt_remainsendnum"
            android:layout_toRightOf="@+id/txt_remainsendmsg"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_4b4b4b"
            android:text="111"
            android:textSize="@dimen/regularfont"
            />
    </RelativeLayout>
    <View
        android:id="@+id/v_01"
        android:layout_below="@id/ray_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/txt_price"
        android:layout_below="@id/v_01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="0.08元/条"
        android:textColor="@color/color_4b4b4b"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        />
  <!--<ScrollView-->
        <!--android:id="@+id/sv_buysmslist"-->
        <!--android:layout_below="@id/txt_price"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scrollbars="none"-->
        <!--android:layout_marginBottom="30dp"-->
        <!--&gt;-->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--&gt;-->
   <ListView
        android:id="@+id/act_buysms_list"
        android:layout_below="@id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colores_news_14"
        android:divider="@color/colores_news_14"
        android:dividerHeight="5dp"
        android:layout_marginBottom="60dp"
        android:scrollbars="none"/>
    <!--</LinearLayout>
    </ScrollView>-->
    <View
        android:id="@+id/v_bottom"
        android:layout_below="@id/act_buysms_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#555555"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/txt_buymsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shap_hollow_red"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="购买短信"
            android:textColor="@color/color_ff6351"
            android:textSize="17sp" />
    </RelativeLayout>
</RelativeLayout>