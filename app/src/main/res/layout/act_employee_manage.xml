<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <cn.com.hgh.indexscortlist.ClearEditText
        android:id="@+id/act_employee_manage_filter_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@mipmap/search_bar_icon_normal"
        android:drawablePadding="10dp"
        android:hint="搜索人员名字"
        android:imeOptions="actionSearch"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15.0dip" />

    <FrameLayout
        android:id="@+id/frame_employee_manage_have"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/act_employee_manage_country_lvcountry"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:divider="@null"
            android:listSelector="@color/transparent" />

        <!-- android:background="@drawable/show_head_toast_bg" -->

        <TextView
            android:id="@+id/act_employee_manage_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <cn.com.hgh.indexscortlist.SideBar
            android:id="@+id/act_employee_manage_sidrbar"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="80dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/img_employee_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@mipmap/iv_empty"
        android:visibility="gone" />

</LinearLayout>