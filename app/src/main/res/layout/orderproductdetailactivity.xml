<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- android:background="@drawable/orderproductdetailactivity_iv_down_img" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_white_up"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/orderproductdetailactivity_order_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_grey"
                android:padding="15dp"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/orderproductdetailactivity_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/orderproductdetailactivity_time_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:textColor="@color/colores_news_12"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/orderproductdetailactivity_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/colores_news_12"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/orderproductdetailactivity_address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/colores_news_12"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/orderproductdetailactivity_iv_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/orderproductdetailactivity_iv_up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_white_down"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="总计金额"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/orderproductdetailactivity_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/colores_news_01"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/orderproductdetailactivity_iv_qrce"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="25dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/orderproductdetailactivity_iv_shou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login_translat"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:paddingTop="8dp"
                android:text="扫码付款"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/orderproductdetailactivity_iv_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:paddingTop="8dp"
                android:text="去订单列表"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>