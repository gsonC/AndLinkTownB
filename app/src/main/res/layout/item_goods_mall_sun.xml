<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center|left"
    android:orientation="horizontal"
    android:paddingLeft="15dp" >

    <ImageView
        android:id="@+id/img_goods_mall_sun"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@mipmap/source_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_goods_mall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colores_news_10"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_goods_mall_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colores_news_01"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>