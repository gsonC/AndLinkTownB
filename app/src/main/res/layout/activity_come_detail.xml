<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_back"/>

        <TextView
            android:id="@+id/tv_starttime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_bar_edit_selector"
            android:gravity="center"
            android:hint="年月日"
            android:padding="5dp"
            android:textColor="#4b4b4b"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.5dp"
            android:layout_marginRight="5.5dp"
            android:text="---"
            android:textColor="#4b4b4b"
            android:textSize="12.5sp"/>

        <TextView
            android:id="@+id/tv_finishtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_radius_4dp"
            android:gravity="center"
            android:hint="年月日"
            android:padding="5dp"
            android:textColor="#4b4b4b"
            />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/searchthree"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/color_ededed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <CheckBox
            android:id="@+id/tv_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cb_greyselected"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="今日"
            android:textColor="@color/colores_news_19"/>

        <CheckBox
            android:id="@+id/tv_weekday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/cb_greyselected"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="周"
            android:textColor="@color/colores_news_19"/>

        <CheckBox
            android:id="@+id/tv_onemonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/cb_greyselected"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="月"
            android:textColor="@color/colores_news_19"/>

        <CheckBox
            android:id="@+id/tv_ji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/cb_greyselected"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="季"
            android:textColor="@color/colores_news_19"/>

        <CheckBox
            android:id="@+id/tv_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/cb_greyselected"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="年"
            android:textColor="@color/colores_news_19"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colores_news_14"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <CheckBox
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/pay_type_select"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="全部"
            android:textColor="@color/colores_news_19"/>

        <CheckBox
            android:id="@+id/tv_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/pay_type_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="支付成功"
            android:textColor="@color/colores_news_19"/>

        <CheckBox
            android:id="@+id/tv_fail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/pay_type_select"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="支付失败"
            android:textColor="@color/colores_news_19"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/colores_news_14"
        />
    <!-- <cn.com.hgh.view.NoScrollViewPager
         android:id="@+id/vp_orderpager"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1" >
     </cn.com.hgh.view.NoScrollViewPager>
 -->

    <cn.com.hgh.view.AbPullToRefreshView

        android:id="@+id/act_comedeatil_abpulltorefreshview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <ListView
            android:visibility="visible"
            android:id="@+id/act_comedeatil_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@color/transparent"
            android:scrollbars="none">
        </ListView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/img_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/iv_empty"
            />
    </cn.com.hgh.view.AbPullToRefreshView>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colores_news_14"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"

        >
    <LinearLayout
        android:id="@+id/lay_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        >


        <TextView
            android:id="@+id/tv_addupto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/pay_type_select"
            android:button="@null"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="累计收银"
            android:textColor="@color/colores_news_19"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/pay_type_select"
            android:button="@null"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="¥ 0"
            android:textColor="@color/colores_news_04"
            android:textSize="14sp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
