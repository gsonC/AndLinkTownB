<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colores_news_14"
     >
    <RelativeLayout
        android:id="@+id/ray_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
       >
     <TextView
         android:id="@+id/txt_msg"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:text="累计发送短信"
        />
        <TextView
         android:id="@+id/txt_alreadysendnum"
         android:layout_toRightOf="@+id/txt_msg"
         android:layout_marginLeft="5dp"
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="111"
         />
        <TextView
            android:id="@+id/txt_remainsendmsg"
            android:layout_toRightOf="@+id/txt_alreadysendnum"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="剩余可发送短信"
            />
        <TextView
            android:id="@+id/txt_remainsendnum"
            android:layout_toRightOf="@+id/txt_remainsendmsg"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            />
        <TextView
            android:id="@+id/btn_msgpay"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="短信购买"
            />
    </RelativeLayout>
    <View
        android:id="@+id/v_01"
        android:layout_below="@id/ray_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />
    <EditText
        android:id="@+id/et_sendcontext"
        android:layout_below="@id/ray_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="编辑短信内容"
        android:gravity="top"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        />
    <LinearLayout
        android:id="@+id/lay_tagobject"
        android:layout_below="@id/et_sendcontext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/btn_sendobject"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="发送对象"
            />
        <TextView
            android:id="@+id/btn_senduser"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:text="选择要发送的会员"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_tagnum"
        android:layout_below="@id/lay_tagobject"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/btn_sendmsgnum"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="预计发送短信条数"
            />
        <TextView
            android:id="@+id/btn_msgnum"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:text="100"
            />
    </LinearLayout>
    <View
        android:id="@+id/v_02"
        android:layout_below="@id/lay_tagnum"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/txt_sendmsg"
        android:layout_below="@id/v_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_login"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="发送短信"
        android:textColor="@color/white"
        android:textSize="17sp" />

</RelativeLayout>