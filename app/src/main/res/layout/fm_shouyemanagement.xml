<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colores_news_14"
            android:fillViewport="true"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/llt_shouyemag_inshopservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_shouyemag_inshop"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="到店服务"
                android:textColor="@color/colores_news_10"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@mipmap/service_new_right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/color_e3e3e3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingTop="18dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_shouyemag_order"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/icon_shouyemag_order"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="9dp"
                    android:text="客户买单"
                    android:textColor="@color/showcolor"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_shouyemag_call"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_shouyemag_call"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="9dp"
                    android:text="响应呼叫"
                    android:textColor="@color/showcolor"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_shouyemag_condetail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_shouyemag_condetail"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="9dp"
                    android:text="消费流水"
                    android:textColor="@color/showcolor"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/ind_shouyemanagement_flow"
            layout="@layout/include_shouyestrip"
            />


        <LinearLayout
            android:id="@+id/llt_shouyemanagement_comsum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone"
            >
        </LinearLayout>

        <View
            android:id="@+id/view_fillview"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colores_news_14"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colores_news_14"/>

        <include
            android:id="@+id/ind_shouyemanagement_cashier"
            layout="@layout/include_shouyestrip"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_shouyemanagement"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            />

        <include
            android:id="@+id/ind_shouyemanagement_salenum"
            layout="@layout/include_shouyedatestrip"/>

        <LinearLayout
            android:id="@+id/llt_shouyemanagement_salenum_show"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:orientation="vertical"
            />

        <include
            android:id="@+id/ind_shouyemanagement_membernum"
            layout="@layout/include_shouyestrip"
            />

        <include
            android:id="@+id/ind_shouyemanagement_shopvip"
            layout="@layout/include_shouyefragment_shopvip"/>

        <include
            android:id="@+id/ind_shouyeLeagues_apprec"
            layout="@layout/include_shouyemanagement_apprec"
            />

    </LinearLayout>
</ScrollView>