<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colores_news_14"
     >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
    <LinearLayout
        android:id="@+id/lay_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >
     <RelativeLayout
         android:id="@+id/ray_membercategory"
         android:layout_width="wrap_content"
         android:background="@color/white"
         android:layout_height="wrap_content"
         android:paddingTop="8dp"
         android:paddingBottom="8dp"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         >
     <TextView
         android:id="@+id/tv_memberclassify"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="会员类别："
         android:textColor="@color/colores_news_19"
         android:layout_centerVertical="true"
         android:textSize="16sp" />
     <EditText
         android:id="@+id/tv_classifyvalue"
         android:layout_toRightOf="@id/tv_memberclassify"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@null"
         android:singleLine="true"
         android:gravity="center"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:layout_centerVertical="true"
         android:textColor="@color/showcolor"
         android:textSize="16sp" />
     </RelativeLayout>
     <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colores_news_14" />
     <LinearLayout
         android:id="@+id/lay_discountrate"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingTop="8dp"
         android:paddingBottom="8dp"
         android:background="@color/white"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         >
         <TextView
             android:id="@+id/tv_discountradio"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_centerVertical="true"
             android:text="折扣比例："
             android:textColor="@color/colores_news_19"
             android:textSize="16sp" />
         <EditText
             android:id="@+id/tv_radiovalue"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="3dp"
             android:paddingRight="3dp"
             android:background="@drawable/shap_hollow_red"
             android:layout_centerVertical="true"
             android:singleLine="true"
             android:maxLength="3"
             android:text=""
             android:inputType="numberDecimal"
             android:textColor="@color/colores_news_04"
             android:textSize="15sp"
             />
         <TextView
             android:id="@+id/tv_sale"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_marginLeft="5dp"
             android:layout_centerVertical="true"
             android:text="折"
             android:textColor="@color/showcolor"
             android:textSize="16sp" />
         <TextView
             android:id="@+id/tv_rangebetween"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_marginLeft="5dp"
             android:layout_centerVertical="true"
             android:text="(0.1-10之间)"
             android:textColor="@color/colores_news_04"
             android:textSize="16sp" />
     </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colores_news_14" />
        <LinearLayout
            android:id="@+id/lay_singlediscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <TextView
                android:id="@+id/tv_maxidiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="单笔最高优惠："
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/colores_news_19"
                />
            <EditText
                android:id="@+id/tv_maxidiscountvalue"
                android:layout_width="110dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="11"
                android:background="@drawable/shap_hollow_red"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/colores_news_04"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="元"
                android:textColor="@color/showcolor"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colores_news_14" />
     <LinearLayout
         android:id="@+id/ray_integralratio"
         android:layout_width="match_parent"
         android:layout_height="70dp"
         android:paddingTop="5dp"
         android:background="@color/white"
         android:gravity="center_vertical"
         android:orientation="vertical"
         >
     <LinearLayout
             android:id="@+id/ray_integralratio1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:background="@color/white"
             android:orientation="horizontal"
             >
     <TextView
         android:id="@+id/tv_integralradio"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="积分比例："
         android:layout_centerVertical="true"
         android:textSize="16sp"
         android:textColor="@color/colores_news_19"
         />
     <EditText
             android:id="@+id/tv_whatmoney"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
         android:background="@null"
         android:singleLine="true"
         android:layout_centerVertical="true"
             android:text="1"
         android:textColor="@color/showcolor"
         android:textSize="16sp" />
     <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="元 ="
             android:textColor="@color/showcolor"
             android:layout_centerVertical="true"
             android:textSize="16sp" />
     <EditText
             android:id="@+id/tv_whatintegral"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:gravity="center"
             android:background="@null"
             android:singleLine="true"
             android:layout_centerVertical="true"
             android:text="1"
             android:textColor="@color/showcolor"
             android:textSize="16sp" />
     <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="积分"
             android:textColor="@color/showcolor"
             android:layout_centerVertical="true"
             android:textSize="16sp" />
         </LinearLayout>
     <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/white"
             android:gravity="left"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:textColor="@color/showcolor"
             android:text="(不足设定的金额不积分，积分比例不可修改)"
             android:textSize="14sp" />

     </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colores_news_14" />
     <LinearLayout
         android:id="@+id/ray_required"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:orientation="vertical"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:paddingBottom="10dp"
         >
     <TextView
         android:id="@+id/tv_required"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:layout_marginTop="15dp"
         android:text="成为该级别会员所需条件："
         android:layout_centerVertical="true"
         android:textSize="16sp"
         android:textColor="@color/colores_news_19"
         />
      <RelativeLayout
          android:id="@+id/lay_required"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:layout_marginBottom="5dp"
            >
     <TextView
         android:id="@+id/tv_amountpay"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:text="累计消费金额："
         android:layout_centerVertical="true"
         android:textSize="15sp"
         android:textColor="@color/colores_news_19"
         />
      <EditText
             android:id="@+id/et_rangebefore"
             android:layout_toRightOf="@id/tv_amountpay"
             android:layout_width="60dp"
              android:background="@drawable/shap_hollow_red"
              android:singleLine="true"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:paddingLeft="3dp"
          android:paddingRight="3dp"
          android:maxLength="11"
              android:layout_centerVertical="true"
             android:layout_height="match_parent"
             android:gravity="center"
             android:inputType="number"
             android:textSize="16sp"
             android:textColor="@color/colores_news_04"
          />
       <TextView
             android:id="@+id/tv_between"
             android:layout_toRightOf="@id/et_rangebefore"
             android:layout_width="wrap_content"
             android:layout_alignBaseline="@id/tv_amountpay"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="  -  "
             android:layout_centerVertical="true"
             android:textSize="16sp" />
         <EditText
             android:id="@+id/et_rangeafter"
             android:layout_toRightOf="@id/tv_between"
             android:layout_width="60dp"
             android:background="@drawable/shap_hollow_red"
             android:singleLine="true"
             android:inputType="number"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="3dp"
             android:paddingRight="3dp"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:maxLength="11"
             android:layout_centerVertical="true"
             android:textSize="15sp"
             android:textColor="@color/colores_news_04"
             />
         <TextView
             android:id="@+id/et_element"
             android:layout_toRightOf="@id/et_rangeafter"
             android:layout_alignBaseline="@id/tv_amountpay"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="3dp"
             android:gravity="center"
             android:text="元"
             android:textColor="@color/showcolor"
             android:layout_centerVertical="true"
             android:textSize="16sp" />
     </RelativeLayout>
         <TextView
             android:id="@+id/tv_222"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:text="@string/membercategoryhint"
             android:layout_centerVertical="true"
             android:textSize="14sp"
             android:textColor="@color/showcolor"
             />
         </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colores_news_14" />
        <LinearLayout
            android:id="@+id/lay_numofmembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <TextView
                android:id="@+id/tv_numofmembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="本分类现有会员数："
                android:textSize="@dimen/regularfont"
                android:textColor="@color/colores_news_19"
                />

            <TextView
                android:id="@+id/tv_specificfigures"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/showcolor"
                android:textSize="@dimen/regularfont"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_membership"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shap_hollow_grey"
                android:text="本分类会员详情"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/regularfont"
                android:textColor="@color/showcolor"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_addmembercategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shap_hollow_red"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="添加此分类会员"
            android:textColor="@color/color_ff6351"
            android:textSize="17sp" />
    </RelativeLayout>
</RelativeLayout>