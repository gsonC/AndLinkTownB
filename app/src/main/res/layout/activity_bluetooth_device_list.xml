<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed"
    tools:context="com.lianbi.mezone.b.ui.BluetoothDeviceListActivity">

    <RelativeLayout
        android:id="@+id/bluetooth_device_list_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择连接的设备"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bluetooth_device_list_title"
        android:background="@color/colores_news_12" />

    <RelativeLayout
        android:id="@+id/search_bluetooth_device"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/search_bluetooth_device_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="搜索蓝牙设备" />

        <LinearLayout
            android:id="@+id/is_searching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在搜索蓝牙设备..." />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/search_bluetooth_device"
        android:layout_below="@id/divider_view_1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_ededed"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="匹配的设备"
                android:textColor="@color/colores_news_10"
                android:textSize="@dimen/h15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colores_news_12" />

            <cn.com.hgh.view.MyListView
                android:id="@+id/paired_devices_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/colores_news_12"
                android:dividerHeight="1dp"
                android:drawSelectorOnTop="false"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:scrollingCache="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/no_paired_bluetooth_device"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="没有匹配的设备"
                android:textColor="@color/colores_news_11"
                android:textSize="@dimen/h14"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colores_news_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_ededed"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="其它可连接设备"
                android:textColor="@color/colores_news_10"
                android:textSize="@dimen/h15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colores_news_12" />

            <cn.com.hgh.view.MyListView
                android:id="@+id/new_devices_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/colores_news_12"
                android:dividerHeight="1dp"
                android:drawSelectorOnTop="false"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:scrollingCache="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/no_new_bluetooth_device"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="没有搜索到新的设备"
                android:textColor="@color/colores_news_11"
                android:textSize="@dimen/h14"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colores_news_12" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
