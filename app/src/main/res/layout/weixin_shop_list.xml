<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/new_product_ima"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            >

            <TextView
                android:id="@+id/new_product_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="蛋包饭+紫菜汤"
                android:textColor="@color/showcolor"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/new_product_rated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="好吃"
                android:textColor="@color/foodcolor"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/new_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="580"
                android:textColor="@color/pointcolor"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e3e3e3"
        android:paddingLeft="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/new_product_choose"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_search_date_edt_bg_new"
            android:gravity="center"
            android:padding="2dp"
            android:text="选择"
            android:textColor="@color/point"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/color_ededed"
        />
</LinearLayout>