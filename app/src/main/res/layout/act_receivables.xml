<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/colores_news_14"/>

    <LinearLayout
        android:id="@+id/llt_receivableslogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@mipmap/receivables_logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llt_receivableslogo"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_receivanles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/regist_checkbox"
            android:checked="true"
            android:scaleType="centerInside"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textColor="@color/colores_news_10"/>

        <TextView
            android:id="@+id/tv_receivables_append"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_007aff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_receivables_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_login"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="17sp"/>
</RelativeLayout>