    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e3e3e3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/ima_bigima"
                android:layout_width="248dp"
                android:layout_height="248dp"
                android:layout_centerInParent="true"

            />

        <ImageView
            android:id="@+id/ima_Smallima"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/add2"
            android:visibility="visible"
            />
    </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/small_imaOne"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:src="@mipmap/add2"
            />

        <ImageView
            android:id="@+id/small_imaTwo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:src="@mipmap/add2"

            />

        <ImageView
            android:id="@+id/small_imaThree"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:src="@mipmap/add2"

            />

        <ImageView
            android:id="@+id/small_imaFour"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:src="@mipmap/add2"

            />

        <ImageView
            android:id="@+id/small_imaFive"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:src="@mipmap/add2"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:background="@drawable/shape_login"
        android:clickable="true"
        android:gravity="center"
        android:text="确定"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        />

</LinearLayout>


