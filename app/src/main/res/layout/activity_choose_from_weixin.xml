<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <cn.com.hgh.indexscortlist.ClearEditText
        android:id="@+id/act_member_list_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@mipmap/search_bar_icon_normal"
        android:drawablePadding="10dp"
        android:hint="搜索"
        android:imeOptions="actionSearch"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15.0dip"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e3e3e3"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="9dp"
    android:text="新品上市"
    android:textSize="14sp"
    android:textColor="@color/color_272727"
    />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e3e3e3"
        />
    <ListView
        android:id="@+id/act_addmembers_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@color/transparent"
        android:scrollbars="none">
    </ListView>
</LinearLayout>
