<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104.5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_bussinessMaking_manage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="44dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/huiyuantt"
                android:layout_marginTop="14.5dp"
               />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员管理"
                    android:layout_marginLeft="11.5dp"
                    android:layout_marginTop="18.5dp"
                    android:textSize="14sp"
                    android:textColor="@color/colores_news_10"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bussinessMaking_youhuijuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/youhuiquantt"
                    android:layout_marginTop="14.5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券管理"
                    android:layout_marginTop="18.5dp"
                    android:layout_marginLeft="11.5dp"
                    android:textSize="14sp"
                    android:textColor="@color/colores_news_10"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="44dp">

            <LinearLayout
                android:id="@+id/ll_bussinessMaking_wenzhang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wenzhangtwo"
                    android:layout_marginTop="14.5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营销文章"
                    android:textSize="14sp"
                    android:textColor="@color/colores_news_10"
                    android:layout_marginLeft="11.5dp"
                    android:layout_marginTop="18.5dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bussinessMaking_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yinxiaoxiaoxitt"
                    android:layout_marginTop="14.5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营销消息管理"
                    android:layout_marginTop="18.5dp"
                    android:layout_marginLeft="11.5dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
