<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

   <LinearLayout
                android:id="@+id/llt_marketingmsgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
       >
       <LinearLayout
           android:id="@+id/llt_sendmoblie"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center">

           <TextView
               android:id="@+id/tv_sendmobile"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:singleLine="true"
               android:text="2016"
               android:textColor="@color/color_4b4b4b"
               android:textSize="14sp"
               />
       </LinearLayout>


               <TextView
                    android:id="@+id/tv_membergrade"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="3"
                    android:textColor="@color/color_4b4b4b"
                    android:textSize="14sp"
                     />   
                 
                  <TextView
                    android:id="@+id/tv_memberlable"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="5:3"
                    android:textColor="@color/color_4b4b4b"
                    android:textSize="14sp"
                     />

             </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_loadedall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="已加载全部"
        android:textColor="@color/colores_news_11"
        android:textSize="15sp" />
</RelativeLayout>