<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colores_news_14"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <cn.com.hgh.view.CircularImageView
            android:id="@+id/civ_regist_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/default_head" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/phone" />

            <EditText
                android:id="@+id/register_phone_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/telphone"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="15dp"
                android:textColor="@color/colores_news_11"
                android:textColorHint="@color/colores_news_11"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/colores_news_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/lock" />

            <EditText
                android:id="@+id/register_validtecode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/verifycode"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/colores_news_11"
                android:textColorHint="@color/colores_news_11"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/register_get_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_register1"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/get_verifycode"
                android:textColor="@color/colores_news_01"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/colores_news_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/lock" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_input_pwd"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/colores_news_11"
                android:textColorHint="@color/colores_news_11"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/colores_news_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/lock" />

            <EditText
                android:id="@+id/register_pwd_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_input_pwd_again"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/colores_news_11"
                android:textColorHint="@color/colores_news_11"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/register_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_login"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/regist_checkbox"
            android:checked="true"
            android:scaleType="centerInside"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/click_register_agree"
            android:textColor="@color/colores_news_10" />

        <TextView
            android:id="@+id/tv_register_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_007aff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="å’Œ"
            android:textColor="@color/colores_news_10" />

        <TextView
            android:id="@+id/tv_register_agent_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_007aff" />
    </LinearLayout>

</LinearLayout>