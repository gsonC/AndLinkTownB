<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colores_news_14"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colores_news_14"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:background="@color/white"/>

            <cn.com.hgh.view.PagerSlidingTabStrip
                android:id="@+id/tabs_fm_shouye"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                app:pstsDividerColor="@color/transparent"
                app:pstsIndicatorColor="@color/colores_news_20"
                app:pstsIndicatorHeight="3dp"
                app:pstsShouldExpand="true"
                app:pstsTabBackground="@drawable/background_tab"
                app:pstsUnderlineHeight="3dp"
                app:selectedTabTextColor="@color/colores_news_20"
                />

            <View
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:background="@color/white"/>
        </LinearLayout>

        <include layout="@layout/adeslltview"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_fm_shouye"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>