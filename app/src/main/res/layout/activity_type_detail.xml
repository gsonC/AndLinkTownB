<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colores_news_14"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colores_news_01" />

        <TextView
            android:id="@+id/tv_typedetail_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="餐饮零食包含的经营内容"
            android:textColor="@color/colores_news_10"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colores_news_14" />

    <TextView
        android:id="@+id/tv_typedetail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp"
        android:text="餐饮零餐饮零食包含的经营内容餐饮零食包含的经营内容餐饮零食包含的经营内容食包含的经营内容"
        android:textColor="@color/colores_news_11"
        android:textSize="16sp" />

</LinearLayout>