<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="115dp"
              android:orientation="vertical"
              android:paddingRight="-90dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/point_ima"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/point_goodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蛋包饭+紫菜汤"
                    android:textColor="@color/showcolor"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/rated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:maxLines="2"
                    android:text="真好吃的，啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
                    android:textColor="@color/foodcolor"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/goodsPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="200积分"
                    android:textColor="@color/pointcolor"
                    android:textSize="14sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/pullgoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableRight="@mipmap/downtwo"
                    android:text="上架"
                    android:textColor="@color/pointcolor"
                    android:textSize="14sp"

                    />


                <TextView
                    android:id="@+id/pushgoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="9dp"
                    android:textColor="@color/foodcolor"
                    android:textSize="14sp"
                    android:visibility="gone"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/changegoods"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/shape_search_date_edt_bg_new"
                    android:text="修改"
                    android:textColor="@color/point"
                    android:textSize="14sp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:layout_marginBottom="8dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout

            android:layout_width="90dp"
            android:layout_height="115dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="right">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="115dp"
                android:layout_alignParentRight="true"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_chdelete"
                    android:layout_width="90dp"
                    android:layout_height="115dp"
                    android:background="#ff0000"
                    android:gravity="center"
                    android:text="删除"
                    android:textSize="15sp"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/color_ededed"/>

</LinearLayout>