<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="-90dp"
              android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/point_ima"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/point_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/showcolor"
            android:textSize="16sp"
            android:text="蛋包饭+紫菜汤"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foodcolor"
            android:textSize="13sp"
            android:text="真好吃的，单"
            />
        <TextView

            android:id="@+id/trated"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foodcolor"
            android:textSize="14sp"
            android:text="真好吃的，单位id啊"

            />
        <TextView
            android:id="@+id/goodsPoint"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pointcolor"
            android:textSize="14sp"
            android:text="200积分"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginRight="160dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/pullgoods"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pointcolor"
                android:textSize="14sp"
                android:text="上架"
                />

            <ImageView
                android:id="@+id/pullgoodsIma"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/downtwo"
                />

        </LinearLayout>
        <TextView
            android:paddingTop="9dp"
            android:id="@+id/pushgoods"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foodcolor"
            android:textSize="14sp"
            android:text="下架"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginTop="45dp"
            android:id="@+id/changegoods"
            android:layout_marginRight="18dp"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textColor="@color/point"
            android:textSize="14sp"
            android:text="修改"
            android:background="@drawable/shape_search_date_edt_bg_new"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>

    <RelativeLayout

        android:layout_width="90dp"
        android:layout_height="136dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:gravity="right">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="136dp"
            android:layout_alignParentRight="true"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_chdelete"
                android:layout_width="40dp"
                android:layout_height="136dp"
                android:background="#ff0000"
                android:gravity="center"
                android:text="删除"
                android:textSize="15sp"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/color_ededed"/>

</LinearLayout>