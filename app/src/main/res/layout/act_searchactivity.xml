<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colores_news_14"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_searchtable"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <cn.com.hgh.indexscortlist.ClearEditText
            android:id="@+id/searchview"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_5_white"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="5dp"
            android:imeOptions="actionSearch"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="16sp"  />

        <TextView
            android:id="@+id/tv_cancel_sousuo"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="取消"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/iv_searchtable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@mipmap/iv_empty"
        android:visibility="gone" />

</LinearLayout>